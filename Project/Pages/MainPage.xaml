<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.MainPage"
             Title="Movie Explorer">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10">
        <!--=loading indicator=-->
        <VerticalStackLayout x:Name="LoadingPanel"
                     IsVisible="False"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Grid.RowSpan="4">
            <ActivityIndicator x:Name="LoadingIndicator" 
                       IsRunning="False"/>
            <Label Text="Loading movies, this might take a moment..." 
           HorizontalOptions="Center"
           Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <!--=Welcome header=-->
        <Label x:Name ="WelcomeLabel"
                   Text="Welcome to Movie Explorer!"
                   FontSize="20"
                   Grid.Row="0"
                 Margin="0,0,0,10"/>

        <!--=Search bar=-->
        <Entry x:Name="SearchEntry"
               Placeholder="Search for movies..."
               Grid.Row="1"
               TextChanged="SearchEntry_TextChanged"
               Margin="0,0,0,10"/>

        <!--=genre picker=-->
        <HorizontalStackLayout Grid.Row="2" Margin="0,0,0,10">
            <Label Text="Genre:" VerticalOptions="Center"/>
            <Picker x:Name="GenrePicker"
                    SelectedIndexChanged="GenrePicker_SelectedIndexChanged"
                    WidthRequest="200"/>
        </HorizontalStackLayout>


        <!--=list of movies=-->
        <CollectionView x:Name="MoviesList"
                        Grid.Row="3"
                        SelectionMode="Single"
                        SelectionChanged="MoviesList_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" Stroke="Gray">
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Text="{Binding Emoji}"
                                FontSize="40"
                                 VerticalOptions="Center"
                                 Grid.Column="0"/>
                            <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Year}"/>
                                <Label Text="{Binding GenreString}" TextColor="Gray"/>
                                <Label Text="{Binding rating, StringFormat='IMDB: {0}'}" TextColor="Gold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>






        </CollectionView>
    </Grid>




</ContentPage>