<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Pages.MainPage"
             Title="Movie Explorer">
    
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10"
          
          <!--=Welcome header=-->
          <Label x:Name ="WelcomeLabel"
                   Text="Welcome to Movie Explorer!"
                   FontSize="20"
                   Grid.Row="0"
                 Margin="0,0,0,10"/>"

        <!--=Search bar=-->
        <Entry x:Name="SearchEntry"
               Placeholder="Search for movies..."
               Grid.Row="1"
               TextChanged="SearchEntry_TextChanged"
               Margin="0,0,0,10"/>

        <!--=genre picker=-->
        <HorizontalStackLayout Grid.Row="2" Margin="0,0,0,10">
            <Label Text="Genre:" VerticalOptions="Center"/>
            <Picker x:Name="GenrePicker"
                    SelectedIndexChanged="GenrePicker_SelectedIndexChanged"
                    WidthRequest="200"/>
        </HorizontalStackLayout>


        <!--=list of movies=-->
        

































</ContentPage>